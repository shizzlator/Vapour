@model Vapour.Web.Models.ProjectsViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <div class="row">
        <div class="col-lg-4">
            <h1>Projects</h1>
        </div>
        <div class="col-lg-12">
            <a href="save" class="btn btn-default btn-lg" role="button">Create New &raquo;</a>
        </div>
    </div>
</div>

<div class="container">
    
</div>

<div class="container">
    @foreach (var project in Model.Projects)
    {
        <div class="panel panel-primary row">
            <div class="panel-heading">
                <h2 class="panel-title">@project.Key</h2>
            </div>
            <div class="panel-body col-md-8">
                <div class="col-xs-12 col-sm-5">
                    <label class="control-label">Environment:</label>
                    @Html.DropDownListFor(x => x.Projects[project.Key].Environments, new SelectList(Model.Projects[project.Key].Environments), new { @class = "form-control" })
                </div>
                <div class="col-xs-12 col-sm-5">
                    <label class="control-label">Tests:</label>
                    @Html.DropDownListFor(x => x.Projects[project.Key].TestDescriptions, new SelectList(Model.Projects[project.Key].TestDescriptions), new { @class = "form-control" })
                </div>
                <div class="col-xs-12 col-sm-2">
                    <span class="btn btn-success btn-run" data-projectName="@project.Key">Run</span>
                </div>
            </div>
        </div>
    }
    <hr>
</div>
<script>
    $(function() {
        $('.btn-run').click(function() {
            var projectDropDowns = $(this).parent().siblings().children('select');
            var environment = $(projectDropDowns[0]).val();
            var testDescription = $(projectDropDowns[1]).val();

            window.location.assign('test/' + $(this).attr('data-projectName') + '/' + environment + '/' + testDescription);
        });
    });
</script>
<style>
    .btn-run {
        margin-top: 30px;
    }

    .control-label {
        margin-top: 5px;
    }

    .vcenter {
        vertical-align: middle;
    }

    .jumbotron {
        padding: 20px;
    }

    .jumbotron a {
        margin-top: 35px;
    }

    .panel-heading h2 {
        font-size: 1.3em;
    }
</style>