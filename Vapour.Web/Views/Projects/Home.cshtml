@model Vapour.Web.Models.ProjectsViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Projects</h1>
        </div>
        <div class="col-md-6">
            <a href="~/Projects/Save" class="btn btn-default btn-lg" role="button">Create New &raquo;</a>
        </div>
    </div>
    <hr class="heading-line"/>
    @foreach (var project in Model.Projects)
    {
        <div class="panel panel-info row">
            <div class="panel-heading">
                <h2 class="panel-title">@project.Key</h2>
            </div>
            <div class="panel-body col-md-12">
                <div class="col-xs-12 col-sm-5 col-md-3">
                    <label class="control-label">Environment:</label>
                    @Html.DropDownListFor(x => x.Projects[project.Key].Environments, new SelectList(Model.Projects[project.Key].Environments), new { @class = "form-control" })
                </div>
                <div class="col-xs-12 col-sm-5 col-md-3">
                    <label class="control-label">Tests:</label>
                    @Html.DropDownListFor(x => x.Projects[project.Key].TestDescriptions, new SelectList(Model.Projects[project.Key].TestDescriptions), new { @class = "form-control" })
                </div>
                <div class="col-xs-12 col-sm-2 col-md-6">
                    <span class="btn btn-success btn-run pull-right">Run</span>
                </div>
            </div>
        </div>
    }
    <hr>
</div>
<style>
    .panel-info h2 {
        color: #222222;
    }
     .btn-run {
         margin-top: 30px;
     }

    .control-label {
        margin-top: 5px;
    }

    .vcenter {
        vertical-align: middle;
    }

    .jumbotron {
        padding: 20px;
    }

    .heading a {
        margin-top: 20px;
    }

    .panel-heading h2 {
        font-size: 1.3em;
    }

    .heading-line {
        margin: 0;
        border: 100% solid;
    }
</style>